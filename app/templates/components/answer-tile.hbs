<div class="row">
  <div class="col-md-1">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
      <button class="btn btn-default btn-xs" name="upvote" {{action 'upvote' answer}}><span class="glyphicon glyphicon-chevron-up"></span></button>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-md-offset-5">
        {{answer.vote}}
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
      <button class="btn btn-default btn-xs" name="downvote" {{action 'downvote' answer}}><span class="glyphicon glyphicon-chevron-down"></span></button>
      </div>
    </div>
  </div>
  <div class="col-md-11">
    <h5>{{answer.author}} - {{answer.date}}</h5>
    <p>{{answer.body}}</p>
  </div>
</div>
